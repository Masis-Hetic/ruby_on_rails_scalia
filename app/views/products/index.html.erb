<% @products = ProductsHelper.products %>
<div class="new-item">
  <%= link_to 'Ajouter un produit', new_product_path, class: 'btn btn-success' %>
</div>

<div class="big-wrapper">
  <% @products.each do |product| %>
    <div class="wrapper">
      <div class="inner-wrapper">
        <p><span>NAME :</span> <%= product.name %></p>
        <p><span>QUANTITY :</span> <%= product.quantity %></p>
        <p><span>REFERENCE :</span> <%= product.reference %></p>
        <p><span>COMPANY :</span> <%= product.company %></p>
      </div>
      <div class="btns">
        <p>
          <%= link_to 'Show', product_path(product.id), class: 'btn btn-info' %>
        </p>
        <p>
          <%= link_to 'Edit', edit_product_path(product.id), class: 'btn btn-warning' %>
        </p>
        <p>
          <%= link_to 'Delete', "products/#{product.id}", method: :delete, data: { confirm: 'ÃŠtes vous sur ?' },
                      class: 'btn btn-danger' %>
        </p>
      </div>
    </div>
  <% end %>
</div>
